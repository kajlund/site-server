{
  "name": "site-server",
  "version": "1.0.0",
  "description": "Personal website server",
  "engines": {
    "node": ">=20"
  },
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "bruno": "cd ./bruno/site-server && bru run --env Development",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback --all",
    "db:seed": "knex seed:run",
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test:migrate": "cross-env NODE_ENV=test knex migrate:latest",
    "test:seed": "cross-env NODE_ENV=test knex seed:run",
    "test:server": "cross-env NODE_ENV=test node src/server.js",
    "test": "run-p test:migrate test:seed test:server bruno"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@usebruno/cli": "^1.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "sqlite3": "^5.1.7"
  }
}
