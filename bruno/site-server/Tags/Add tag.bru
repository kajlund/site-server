meta {
  name: Add tag
  type: http
  seq: 6
}

post {
  url: {{BASE_URL}}/api/v1/tags
  body: json
  auth: none
}

body:json {
  {
    "tag": "testtag"
  }
}

vars:post-response {
  addedTagId: res.body.data.id
}

assert {
  res.status: eq 201
  res.body.message: eq Created tag testtag
  res.body.data.id: isDefined
  res.body.data.tag: eq testtag
  res.body.data.createdAt: isDefined
  res.body.data.updatedAt: isDefined
}
